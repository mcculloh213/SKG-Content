<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/invert_control"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/close_control"
        app:layout_constraintTop_toBottomOf="@id/zoom_out_control"
        tools:visibility="visible">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="?android:attr/colorPrimaryDark"
            app:cardElevation="5sp"
            app:cardCornerRadius="5sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="2sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Invert Colors"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimaryInverse"/>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7sp"
            android:src="@drawable/ic_invert_colors"
            android:tint="?android:attr/colorPrimaryDark"
            android:contentDescription="@string/hf_invert_colors"
            app:fabCustomSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/close_control"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zoom_out_control"
        tools:visibility="visible">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="7sp"
            android:src="@drawable/ic_arrow_up"
            android:tint="?android:attr/colorPrimaryDark"
            android:contentDescription="@string/hf_hide_menu"
            app:fabCustomSize="28sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?android:attr/colorPrimaryDark"
            app:cardElevation="5sp"
            app:cardCornerRadius="5sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="2sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/magnification_close"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimaryInverse" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zoom_out_control"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zoom_in_control"
        tools:visibility="visible">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="?android:attr/colorPrimaryDark"
            app:cardElevation="5sp"
            app:cardCornerRadius="5sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="2sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/magnification_zoom_out"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimaryInverse"/>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7sp"
            android:src="@drawable/ic_zoom_out"
            android:tint="?android:attr/colorPrimaryDark"
            android:contentDescription="@string/hf_zoom_out"
            app:fabCustomSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zoom_in_control"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/widget_zoom_control"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="?android:attr/colorPrimaryDark"
            app:cardElevation="5sp"
            app:cardCornerRadius="5sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="2sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/magnification_zoom_in"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimaryInverse"/>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7sp"
            android:src="@drawable/ic_zoom_in"
            android:tint="?android:attr/colorPrimaryDark"
            android:contentDescription="@string/hf_zoom_in"
            app:fabCustomSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_zoom_control"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="?android:attr/colorPrimaryDark"
            app:cardElevation="5sp"
            app:cardCornerRadius="5sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="2sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/magnification_menu"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimaryInverse"/>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7sp"
            android:src="@drawable/ic_menu"
            android:tint="?android:attr/colorPrimaryDark"
            android:contentDescription="@string/hf_open_content_menu"
            app:fabCustomSize="35sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>