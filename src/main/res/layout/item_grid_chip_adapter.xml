<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView style="@style/Widget.Base.CardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="@dimen/layout_margin_small"
    card:cardBackgroundColor="?attr/colorOnPrimary"
    card:strokeColor="?attr/colorSecondaryLight"
    card:strokeWidth="1dp"
    card:cardElevation="@dimen/layout_elevation_medium">

    <androidx.constraintlayout.widget.ConstraintLayout style="@style/Container.Base.Fit"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/grid_chip_icon"
            android:layout_width="@dimen/material_icon_size"
            android:layout_height="@dimen/material_icon_size"
            android:layout_margin="@dimen/layout_margin_medium"
            android:src="@drawable/ic_folder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/layout_padding_small"
            android:paddingEnd="@dimen/layout_padding_small"
            android:lines="1"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimaryInverse"
            android:textSize="20sp"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/grid_chip_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="List Item: Title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>