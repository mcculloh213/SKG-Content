<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout style="@style/Container.Base.Fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/invert_container"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_xsmall"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/close_container"
        app:layout_constraintTop_toBottomOf="@id/zoom_out_container"
        tools:visibility="visible">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="?attr/colorSecondary"
            app:cardElevation="@dimen/layout_elevation_small"
            app:cardCornerRadius="@dimen/corner_radius_shallow">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_medium"
                android:layout_marginEnd="@dimen/layout_margin_medium"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:layout_marginBottom="@dimen/layout_margin_small"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/content_invert_color_label"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/invert_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_small"
            android:src="@drawable/ic_invert_colors"
            android:contentDescription="@string/hf_invert_colors"
            app:tint="?android:attr/textColorPrimaryInverse"
            app:backgroundTint="?attr/colorAccent"
            app:fabCustomSize="32dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/close_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_xsmall"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zoom_out_container"
        tools:visibility="visible">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/close_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/layout_margin_small"
            android:src="@drawable/ic_arrow_up"
            android:contentDescription="@string/hf_hide_menu"
            app:fabCustomSize="32dp"
            app:tint="?android:attr/textColorPrimaryInverse"
            app:backgroundTint="?attr/colorAccent"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorSecondary"
            app:cardElevation="@dimen/layout_elevation_small"
            app:cardCornerRadius="@dimen/corner_radius_shallow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_medium"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:layout_marginEnd="@dimen/layout_margin_medium"
                android:layout_marginBottom="@dimen/layout_margin_small"
                android:text="@string/content_close_menu"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zoom_out_container"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_xsmall"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/zoom_in_container"
        tools:visibility="visible">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="?attr/colorSecondary"
            app:cardElevation="@dimen/layout_elevation_small"
            app:cardCornerRadius="@dimen/corner_radius_shallow">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_medium"
                android:layout_marginEnd="@dimen/layout_margin_medium"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:layout_marginBottom="@dimen/layout_margin_small"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/content_zoom_out_label"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/zoom_out_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_small"
            android:src="@drawable/ic_zoom_out"
            android:contentDescription="@string/hf_zoom_out"
            app:fabCustomSize="34dp"
            app:tint="?android:attr/textColorPrimaryInverse"
            app:backgroundTint="?attr/colorAccent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zoom_in_container"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_xsmall"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/widget_zoom_container"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="?attr/colorSecondary"
            app:cardElevation="@dimen/layout_elevation_small"
            app:cardCornerRadius="@dimen/corner_radius_shallow">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_medium"
                android:layout_marginEnd="@dimen/layout_margin_medium"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:layout_marginBottom="@dimen/layout_margin_small"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/content_zoom_in_label"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/zoom_in_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_small"
            android:src="@drawable/ic_zoom_in"
            android:contentDescription="@string/hf_zoom_in"
            app:fabCustomSize="34dp"
            app:tint="?android:attr/textColorPrimaryInverse"
            app:backgroundTint="?attr/colorAccent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_zoom_container"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin_xsmall"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="?attr/colorSecondary"
            app:cardElevation="@dimen/layout_elevation_small"
            app:cardCornerRadius="@dimen/corner_radius_shallow">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_medium"
                android:layout_marginEnd="@dimen/layout_margin_medium"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:layout_marginBottom="@dimen/layout_margin_small"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/content_fab_menu_label"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"/>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/widget_zoom_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_small"
            android:src="@drawable/ic_menu"
            android:contentDescription="@string/hf_open_content_menu"
            app:fabCustomSize="38sp"
            app:tint="?attr/colorSecondary"
            app:backgroundTint="?attr/colorAccent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>